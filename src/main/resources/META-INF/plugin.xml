<idea-plugin>
  <id>jones.foldcallblocks.fold-call-blocks</id>
  <name>Fold Call Blocks</name>
  <vendor>Gareth Jones</vendor>

  <depends>com.intellij.modules.lang</depends>
  <depends>org.jetbrains.plugins.ruby</depends>
  <depends>JavaScript</depends>

  <extensions defaultExtensionNs="com.intellij">
    <lang.foldingBuilder language="JSX Harmony" implementationClass="jones.foldcallblocks.JSBlockFoldingBuilder" />
    <lang.foldingBuilder language="JavaScript" implementationClass="jones.foldcallblocks.JSBlockFoldingBuilder" />
    <lang.foldingBuilder language="TypeScript" implementationClass="jones.foldcallblocks.JSBlockFoldingBuilder" />
    <lang.foldingBuilder language="TypeScript JSX" implementationClass="jones.foldcallblocks.JSBlockFoldingBuilder" />

    <lang.foldingBuilder language="ruby" implementationClass="jones.foldcallblocks.RubyBlockFoldingBuilder" />

    <projectConfigurable instance="jones.foldcallblocks.config.ConfigForm" />
    <projectService serviceImplementation="jones.foldcallblocks.BlockMatchersManager" />
  </extensions>

  <actions />
</idea-plugin>
